extends ../master/default/layout
block content
  .container.mt-5: .row.d-flex.align-items-center
    .col-lg-8.d-none.d-lg-block
      img.img-fluid(src=assetUrl + "/svg/welcome.svg")
    .col-lg-4
      h1 Registration
      +alert(message)

      form#registerForm.mt-2(method='POST' action='/register')
        .form-group
          label(for='name')
            | Name
            sup.text-danger *
          input#name.form-control(
            class=errors.name ? 'is-invalid': '',
            value=formData.name,
            type='text',
            name='name',
            maxlength='64',
            minlength='2'
            required
          )
          +err(errors.name)

        .form-group
          label(for='email')
            | Email address
            sup.text-danger *
          input#email.form-control(
            class=errors.email ? 'is-invalid' : '',
            value=formData.email
            type='email',
            name='email',
            aria-describedby='emailHelp',
            maxlength='128',
            required
          )
          +err(errors.email)
          small#emailHelp.form-text.text-muted We'll never share your email with anyone else.

        .form-group
          label(for='password')
            | Password
            sup.text-danger *
          input#password.form-control(
            class=errors.password ? 'is-invalid' : '',
            type='password'
            name='password'
            required
          )
          +err(errors.password)

        .form-group
          label(for='repeat_password')
            | Repeat Password
            sup.text-danger *
          input.form-control#repeat_password(
            type='password',
            name='repeat_password',
            required
          )

        .form-group.form-check
          input.form-check-input#agree(type='checkbox')
          label.form-check-label(for='agree') I agree to terms and conditions

        button#submit.btn.btn-primary.mt-2(type='submit') Register
