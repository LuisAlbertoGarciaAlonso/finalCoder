extends ../master/default/layout
block content
  .container.mt-5: .row.d-flex.align-items-center
    .col-lg-8.d-none.d-lg-block
      img.img-fluid(src=assetUrl + "/img/login.png")
    .col-lg-4
      h1 Login
      +alert(message)

      form#loginForm.mt-2(method='POST' action='/login')
        .form-group
          label(for='email')
            | Email address
            sup.text-danger *
          input#email.form-control(
            class=errors.email ? 'is-invalid': '',
            value=formData.email
            type='email',
            name='email',
            maxlength='128',
            required
          )
          +err(errors.email)

        .form-group
          label(for='password')
            | Password
            sup.text-danger *
          input#password.form-control(
            class=errors.password ? 'is-invalid': '',
            type='password',
            name='password',
            required
          )
          +err(errors.password)

        button#submit.btn.btn-primary(type='submit') Login
